<aside class="d-flex w-100 px-4 py-3 fw-lighter" style="font-size: .8em">
    <div class="d-flex flex-column my-auto mx-2">
        <span>Exibir todas</span>
        <div class="form-check form-switch">
            <label class="d-none" for="allDates">Exibir todas as datas</label>
            <input class="form-check-input" type="checkbox" role="switch" id="allDates" checked>
        </div>
    </div>
    <div class="vr"></div>
    <div class="d-flex gap-2 mx-auto w-75">
        <div class="d-flex flex-column">
            <span>Ano</span>
            <label for="date" class="form-label mt-2">Data </label>
            <span>MÃªs</span>
        </div>
        <div class="d-flex flex-column w-100">
        {{ YEAR }}
            <span class="text-center fw-bold">{{ TODAY.YEAR |default('2022') }}</span>
            <input type="range" class="form-range mt-2" min="0" max="365" step="1" id="date">
            <div class="d-flex w-100 justify-content-between">
{% for month in 1..12 %}
                <span>|</span>
                <span class="w-100 text-center">{{month}}</span> {# colorir #}
{% endfor %}
                <span>|</span>
            </div>
        </div>
    </div>
    <div class="vr"></div>
    <div class="d-flex mx-2">
        <div class="d-flex flex-column p-2">
            <span>{{ TODAY.YEAR -1}}</span>
            <span>
            {# {% set TODAY = {'MONTH': 2} %} #}
            {% if TODAY.MONTH > 1 %}
                {{ TODAY.MONTH -1 |default('11') }}
            {% else %}
                12
            {% endif %}
            </span>
            <span>
                <i data-feather="arrow-left" style="height:1rem;"></i>
            </span>
        </div>
        <div class="d-flex flex-column p-2 bg-secondary text-white">
            <span>{{ TODAY.YEAR }}</span>
            <span>{{ TODAY.MONTH }}</span>
            <span>{{ TODAY.DAY}}</span>
        </div>
        <div class="d-flex flex-column p-2">
            <span>{{ TODAY.YEAR +1 }}</span>
            <span>
                {{ TODAY.MONTH +1 |default('11') }}
            </span>
            <span>
                <i data-feather="arrow-right" style="height:1rem;"></i>
            </span>
        </div>
    </div>
</aside>